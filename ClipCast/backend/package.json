{
  "name": "backend",
  "module": "src/index.ts",
  "type": "module",
  "author": "Shubham",
  "keywords": [
    "javascript",
    "bun",
    "backend",
    "typescript"
  ],
  "license": "ISC",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "build:exe": "bun build --compile --outfile backend ./src/index.ts",
    "dev": "bun --env-file=.env.local --watch run src/index.ts",
    "format": "prettier --write .",
    "start": "bun --env-file=.env.local run src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "express": "^4.21.0",
    "mongoose": "^8.7.0"
  }
}
